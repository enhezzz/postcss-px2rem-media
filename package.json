{
  "name": "postcss-px2rem-media",
  "version": "0.0.0",
  "description": "PostCSS plugin for transforming px to rem only in media query block is target to adapt mobile ending",
  "keywords": [
    "postcss",
    "css",
    "postcss-plugin",
    "px2rem",
    "media-query"
  ],
  "scripts": {
    "test": "jest-ci --coverage && eslint-ci ."
  },
  "author": "Hugs <13450737557@163.com>",
  "license": "MIT",
  "repository": "enhezzz/postcss-px2rem-media",
  "engines": {
    "node": ">=10.0.0"
  },
  "devDependencies": {
    "clean-publish": "^1.1.8",
    "coveralls": "^3.1.0",
    "eslint": "^7.6.0",
    "eslint-ci": "^1.0.0",
    "eslint-plugin-jest": "^23.20.0",
    "husky": "^4.2.5",
    "jest": "^26.2.2",
    "jest-ci": "^0.1.1",
    "jest-cli": "^26.2.2",
    "lint-staged": "^10.2.11",
    "postcss": "^8.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "eslint --fix"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2017
    },
    "env": {
      "node": true,
      "es6": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:jest/recommended"
    ],
    "rules": {
      "jest/expect-expect": "off"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "coverageThreshold": {
      "global": {
        "statements": 100
      }
    }
  }
}
